# ===================================
# AFRIFY PRODUCTION ENVIRONMENT
# ===================================
# IMPORTANT: Replace ALL values with production credentials
# Never commit this file to version control!

# ===================================
# APPLICATION
# ===================================
NODE_ENV=production
PORT=3000
API_URL=https://api.afrify.com
FRONTEND_URL=https://www.afrify.com
MERCHANT_URL=https://merchant.afrify.com

# ===================================
# DATABASE (PostgreSQL)
# ===================================
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_USERNAME=afrify_prod
DB_PASSWORD=YOUR_STRONG_PASSWORD_HERE
DB_DATABASE=afrify_production
DB_SSL=true

# ===================================
# REDIS (Caching & Sessions)
# ===================================
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# ===================================
# JWT AUTHENTICATION
# ===================================
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=YOUR_REFRESH_TOKEN_SECRET
JWT_REFRESH_EXPIRES_IN=30d

# ===================================
# M-PESA (PRODUCTION CREDENTIALS)
# ===================================
MPESA_ENVIRONMENT=production
MPESA_CONSUMER_KEY=YOUR_MPESA_CONSUMER_KEY
MPESA_CONSUMER_SECRET=YOUR_MPESA_CONSUMER_SECRET
MPESA_SHORTCODE=YOUR_SHORTCODE
MPESA_PASSKEY=YOUR_MPESA_PASSKEY
MPESA_INITIATOR_NAME=YOUR_INITIATOR_NAME
MPESA_INITIATOR_PASSWORD=YOUR_INITIATOR_PASSWORD
MPESA_CALLBACK_URL=https://api.afrify.com/payments/webhooks/mpesa

# ===================================
# PAYSTACK (PRODUCTION CREDENTIALS)
# ===================================
PAYSTACK_SECRET_KEY=sk_live_YOUR_PAYSTACK_SECRET_KEY
PAYSTACK_PUBLIC_KEY=pk_live_YOUR_PAYSTACK_PUBLIC_KEY
PAYSTACK_WEBHOOK_SECRET=YOUR_PAYSTACK_WEBHOOK_SECRET
PAYSTACK_CALLBACK_URL=https://api.afrify.com/payments/webhooks/paystack

# ===================================
# FLUTTERWAVE (PRODUCTION CREDENTIALS)
# ===================================
FLUTTERWAVE_SECRET_KEY=FLWSECK-YOUR_FLUTTERWAVE_SECRET_KEY
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-YOUR_FLUTTERWAVE_PUBLIC_KEY
FLUTTERWAVE_ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY
FLUTTERWAVE_WEBHOOK_SECRET=YOUR_FLUTTERWAVE_WEBHOOK_SECRET
FLUTTERWAVE_CALLBACK_URL=https://api.afrify.com/payments/webhooks/flutterwave

# ===================================
# AWS S3 / FILE STORAGE
# ===================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_BUCKET=afrify-production-files
AWS_CLOUDFRONT_URL=https://cdn.afrify.com

# Alternative: MinIO for self-hosted storage
# S3_ENDPOINT=https://minio.your-domain.com
# S3_PORT=9000
# S3_USE_SSL=true
# S3_ACCESS_KEY=YOUR_MINIO_ACCESS_KEY
# S3_SECRET_KEY=YOUR_MINIO_SECRET_KEY
# S3_BUCKET=afrify-files

# ===================================
# EMAIL (SMTP)
# ===================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
SMTP_FROM_EMAIL=noreply@afrify.com
SMTP_FROM_NAME=Afrify

# Alternative SMTP providers:
# - SendGrid: smtp.sendgrid.net:587
# - Mailgun: smtp.mailgun.org:587
# - Amazon SES: email-smtp.us-east-1.amazonaws.com:587
# - Gmail: smtp.gmail.com:587 (not recommended for production)

# ===================================
# MONITORING & LOGGING
# ===================================
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ===================================
# RATE LIMITING
# ===================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ===================================
# CORS
# ===================================
CORS_ORIGINS=https://www.afrify.com,https://merchant.afrify.com
CORS_CREDENTIALS=true

# ===================================
# PAGINATION
# ===================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ===================================
# FILE UPLOAD LIMITS
# ===================================
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=10

# ===================================
# SECURITY
# ===================================
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_SECRET=YOUR_SESSION_SECRET_MIN_32_CHARS
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_32_CHARS

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_EMAIL_VERIFICATION=true

# ===================================
# PAYMENT GATEWAY SETTINGS
# ===================================
DEFAULT_CURRENCY=NGN
SUPPORTED_CURRENCIES=NGN,KES,GHS,ZAR,TZS,UGX
PAYMENT_TIMEOUT=300
WEBHOOK_RETRY_ATTEMPTS=3

# ===================================
# ORDER SETTINGS
# ===================================
ORDER_AUTO_CANCEL_HOURS=24
LOW_STOCK_THRESHOLD=10
FREE_SHIPPING_THRESHOLD=10000

# ===================================
# ANALYTICS
# ===================================
GOOGLE_ANALYTICS_ID=G-YOUR_GA_ID
FACEBOOK_PIXEL_ID=YOUR_FB_PIXEL_ID
HOTJAR_ID=YOUR_HOTJAR_ID

# ===================================
# CDN & CACHING
# ===================================
CDN_URL=https://cdn.afrify.com
CACHE_TTL=3600
ENABLE_CACHE=true

# ===================================
# BACKUP
# ===================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=afrify-backups

# ===================================
# SOCIAL MEDIA
# ===================================
FACEBOOK_PAGE_URL=https://facebook.com/afrify
TWITTER_HANDLE=@afrify
INSTAGRAM_HANDLE=@afrify
LINKEDIN_PAGE_URL=https://linkedin.com/company/afrify

# ===================================
# SUPPORT
# ===================================
SUPPORT_EMAIL=support@afrify.com
SUPPORT_PHONE=+234-XXX-XXX-XXXX
COMPANY_NAME=Afrify Technologies Ltd
COMPANY_ADDRESS=Lagos, Nigeria

# ===================================
# LEGAL
# ===================================
TERMS_OF_SERVICE_URL=https://www.afrify.com/terms
PRIVACY_POLICY_URL=https://www.afrify.com/privacy
REFUND_POLICY_URL=https://www.afrify.com/refunds
